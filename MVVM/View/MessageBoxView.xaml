<Window
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.MessageBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:loc="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model"
    xmlns:local="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Message"
    Width="800"
    Height="450"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border
        Width="330"
        Height="110"
        BorderThickness="3"
        CornerRadius="25">

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Offset="0.45" Color="{StaticResource primaryBackColor1}" />
                <GradientStop Offset="0" Color="{StaticResource primaryBackColor2}" />
            </LinearGradientBrush>
        </Border.Background>

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Offset="0" Color="{StaticResource winBorderColor1}" />
                <GradientStop Offset="0.55" Color="{StaticResource winBorderColor2}" />
                <GradientStop Offset="0.80" Color="{StaticResource winBorderColor3}" />
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Grid>

            <Canvas />

            <!--  Виведення помилки  -->
            <TextBlock
                x:Name="TextBlockProblem1"
                MaxWidth="200"
                Margin="0,5,30,50"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Foreground="{StaticResource titleColor1}"
                Text="Помилка"
                TextWrapping="Wrap" />
            <TextBox
                x:Name="MessageBoxTextBox"
                Width="200"
                Height="20"
                Margin="0,5,10,15"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderBrush="DarkGray"
                BorderThickness="0,0,0,2"
                CaretBrush="LightGray"
                FontFamily="Montserrat"
                FontSize="13"
                FontWeight="Medium"
                Foreground="White" />

            <PasswordBox
                x:Name="MessageBoxPasswordBox"
                Width="200"
                Height="20"
                Margin="0,5,10,15"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderBrush="DarkGray"
                BorderThickness="0,0,0,2"
                CaretBrush="LightGray"
                FontFamily="Montserrat"
                FontSize="13"
                FontWeight="Medium"
                Foreground="White" />

            <!--  Кнопки підтвердження  -->
            <Button
                x:Name="ButtonOk"
                Margin="0,0,20,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="ButtonOk_Click"
                Content="Ok"
                Foreground="{StaticResource titleColor1}"
                IsDefault="True"
                Style="{StaticResource buttonmessage}" />
            <Button
                x:Name="ButtonYes"
                Margin="60,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="ButtonYes_Click"
                Content="{loc:Loc Yes}"
                Foreground="{StaticResource titleColor1}"
                Style="{StaticResource buttonmessage}" />
            <Button
                x:Name="ButtonNo"
                Margin="0,0,30,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="ButtonNo_Click"
                Content="{loc:Loc No}"
                Foreground="{StaticResource titleColor1}"
                Style="{StaticResource buttonmessage}" />


            <Image
                x:Name="IconError"
                Width="70"
                Height="70"
                Margin="12"
                HorizontalAlignment="Left"
                Source="/Icons/error.png" />

            <Image
                x:Name="IconSuccess"
                Width="70"
                Height="70"
                Margin="12"
                HorizontalAlignment="Left"
                Source="/Icons/success.png" />

            <Image
                x:Name="IconThink"
                Width="70"
                Height="70"
                Margin="12"
                HorizontalAlignment="Left"
                Source="/Icons/think.png" />
        </Grid>
    </Border>
</Window>
