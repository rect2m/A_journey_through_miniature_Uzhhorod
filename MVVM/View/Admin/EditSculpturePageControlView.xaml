<UserControl
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.Admin.EditSculpturePageControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:loc="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Search + Add button  -->
        <!--  Search + Add button  -->
        <Grid x:Name="Search">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <fa:IconImage
                Grid.Column="0"
                Width="20"
                Height="20"
                Margin="40,0,10,0"
                Foreground="{StaticResource titleColor2}"
                Icon="Search" />

            <TextBox
                Grid.Column="1"
                Width="200"
                Height="28"
                Margin="0,5,0,0"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderBrush="DarkGray"
                BorderThickness="0,0,0,2"
                CaretBrush="LightGray"
                FontFamily="Montserrat"
                FontSize="13"
                FontWeight="Medium"
                Foreground="White"
                Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" />

            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{StaticResource titleColor1}"
                    Text="{loc:Loc TotalMiniatures}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{StaticResource titleColor1}"
                    Text="{Binding TotalMiniaturesCount}"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </StackPanel>

            <Button
                Grid.Column="3"
                Width="160"
                Height="50"
                Margin="0,0,40,0"
                Command="{Binding OpenAddDetailsViewCommand}"
                Content="{loc:Loc AddSculpture}"
                Cursor="Hand"
                Style="{StaticResource button}" />
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel Margin="10" HorizontalAlignment="Center">
                <ItemsControl ItemsSource="{Binding PagedMiniatures}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="220"
                                Margin="10"
                                Padding="10"
                                Background="{StaticResource panelOverColor}"
                                BorderBrush="{StaticResource color11}"
                                BorderThickness="2"
                                CornerRadius="10"
                                Cursor="Hand"
                                RenderTransformOrigin="0.5,0.5">

                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" />
                                </Border.RenderTransform>

                                <!--  Додаємо Behaviors  -->
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonUp">
                                        <i:InvokeCommandAction Command="{Binding DataContext.OpenDetailsViewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>

                                <Border.Triggers>
                                    <!--  Анімація при наведенні  -->
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                    To="1.1"
                                                    Duration="0:0:0.2" />
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                    To="1.1"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                    To="1"
                                                    Duration="0:0:0.2" />
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                    To="1"
                                                    Duration="0:0:0.2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>

                                <StackPanel>
                                    <Image
                                        Width="200"
                                        Height="150"
                                        Margin="5"
                                        Source="{Binding ImageSource}"
                                        Stretch="Fill">
                                        <Image.Clip>
                                            <RectangleGeometry
                                                RadiusX="10"
                                                RadiusY="10"
                                                Rect="0,0,185,150" />
                                        </Image.Clip>
                                    </Image>

                                    <TextBlock
                                        Margin="5"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource titleColor1}"
                                        Text="{Binding Name}"
                                        TextAlignment="Center"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,-10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="10"
                Command="{Binding PrevPageCommand}"
                Cursor="Hand"
                Style="{StaticResource IconButton}"
                Tag="{StaticResource color11}">
                <fa:IconImage Icon="AngleLeft" Style="{StaticResource iconButtonIcon}" />
            </Button>
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                Foreground="{StaticResource titleColor1}"
                Text="{Binding CurrentPage}" />
            <TextBlock
                VerticalAlignment="Center"
                Foreground="{StaticResource titleColor1}"
                Text=" / " />
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                Foreground="{StaticResource titleColor1}"
                Text="{Binding TotalPages}" />
            <Button
                Margin="10"
                Command="{Binding NextPageCommand}"
                Cursor="Hand"
                Style="{StaticResource IconButton}"
                Tag="{StaticResource color11}">
                <fa:IconImage Icon="AngleRight" Style="{StaticResource iconButtonIcon}" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
