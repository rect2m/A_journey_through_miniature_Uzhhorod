<UserControl
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.Admin.EditEventsPageControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:loc="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="900"
    mc:Ignorable="d">

    <UserControl.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <!--  Контент сторінки  -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Поле для пошуку  -->
            <Grid x:Name="Search">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <fa:IconImage
                    Grid.Column="0"
                    Width="20"
                    Height="20"
                    Margin="40,0,10,0"
                    Foreground="{StaticResource titleColor2}"
                    Icon="Search" />

                <TextBox
                    x:Name="TextBoxSearch"
                    Grid.Column="1"
                    Width="200"
                    Height="28"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,2"
                    CaretBrush="LightGray"
                    FontFamily="Montserrat"
                    FontSize="13"
                    FontWeight="Medium"
                    Foreground="White"
                    Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="{loc:Loc EventTextBoxSearchToolTip}" />

                <Button
                    Grid.Column="3"
                    Width="160"
                    Height="50"
                    Margin="0,0,40,0"
                    Command="{Binding OpenAddDetailsViewCommand}"
                    Content="{loc:Loc AddEvent}"
                    Cursor="Hand"
                    Style="{StaticResource button}" />
            </Grid>

            <ScrollViewer
                Grid.Row="1"
                Margin="0,5,0,0"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl Margin="20" ItemsSource="{Binding Events}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <Border
                                    Grid.Column="0"
                                    Width="4"
                                    Background="{StaticResource color11}" />

                                <Ellipse
                                    Grid.Column="0"
                                    Width="22"
                                    Height="22"
                                    Margin="0,0,0,15"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Fill="{StaticResource color11}"
                                    Stroke="White"
                                    StrokeThickness="3">
                                    <Ellipse.Effect>
                                        <DropShadowEffect
                                            BlurRadius="10"
                                            Opacity="0.3"
                                            Color="Black" />
                                    </Ellipse.Effect>
                                </Ellipse>

                                <Button
                                    Grid.Column="1"
                                    Margin="10,5,10,20"
                                    Padding="15"
                                    Background="{StaticResource panelOverColor}"
                                    BorderBrush="{StaticResource color11}"
                                    BorderThickness="1"
                                    Command="{Binding DataContext.SelectEventCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Padding="{TemplateBinding Padding}"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="12">
                                                <ContentPresenter />
                                            </Border>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <StackPanel>
                                        <TextBlock
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="{StaticResource titleColor1}"
                                            Text="{Binding Title}"
                                            TextWrapping="Wrap" />
                                        <StackPanel
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                FontSize="14"
                                                Foreground="{StaticResource titleColor1}"
                                                Text="{loc:Loc EventDate}" />
                                            <TextBlock
                                                FontSize="14"
                                                Foreground="{StaticResource titleColor1}"
                                                Text="{Binding EventDate}" />
                                        </StackPanel>
                                        <TextBlock
                                            FontSize="14"
                                            Foreground="{StaticResource titleColor1}"
                                            Text="{Binding Description}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Button>

                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StackPanel
                Grid.Row="2"
                Margin="0,0,0,-10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <Button
                    Margin="10"
                    Command="{Binding PrevPageCommand}"
                    Style="{StaticResource IconButton}"
                    Tag="{StaticResource color11}"
                    ToolTip="{loc:Loc PrewPageToolTip}">
                    <fa:IconImage Icon="AngleLeft" Style="{StaticResource iconButtonIcon}" />
                </Button>
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource titleColor1}"
                    Text="{Binding CurrentPage}" />
                <TextBlock
                    VerticalAlignment="Center"
                    Foreground="{StaticResource titleColor1}"
                    Text=" / " />
                <TextBlock
                    Margin="5"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource titleColor1}"
                    Text="{Binding TotalPages}" />
                <Button
                    Margin="10"
                    Command="{Binding NextPageCommand}"
                    Style="{StaticResource IconButton}"
                    Tag="{StaticResource color11}"
                    ToolTip="{loc:Loc NextPageToolTip}">
                    <fa:IconImage Icon="AngleRight" Style="{StaticResource iconButtonIcon}" />
                </Button>
            </StackPanel>
        </Grid>

        <!--  🔹 Панель редагування  -->
        <Border
            Width="500"
            Margin="0,20,20,20"
            Padding="20"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Panel.ZIndex="10"
            Background="{StaticResource panelOverColor}"
            BorderBrush="{StaticResource color11}"
            BorderThickness="1"
            CornerRadius="12"
            Visibility="{Binding IsPanelOpen, Converter={StaticResource BoolToVisibilityConverter}}">
            <ScrollViewer>
                <StackPanel>
                    <!--<Button
                        Margin="10"
                        HorizontalAlignment="Right"
                        Command="{Binding DeselectEventCommand}"
                        Style="{StaticResource controlBarButton}"
                        Tag="{StaticResource buttonClose}">
                        <fa:IconImage Icon="Xmark" Style="{StaticResource ControlButtonIcon}" />
                    </Button>-->

                    <Button
                        HorizontalAlignment="Right"
                        Command="{Binding DeselectEventCommand}"
                        Cursor="Hand"
                        Style="{StaticResource IconButton}"
                        Tag="{StaticResource buttonClose}">
                        <fa:IconImage Icon="Xmark" Style="{StaticResource iconButtonIcon}" />
                    </Button>

                    <ComboBox
                        Width="200"
                        Margin="0,0,0,10"
                        Background="{StaticResource panelOverColor}"
                        DisplayMemberPath="Content"
                        SelectedValue="{Binding SelectedLanguage, Mode=TwoWay}"
                        SelectedValuePath="Tag"
                        Style="{StaticResource ComboBoxStyle}">
                        <ComboBoxItem Content="Українська" Tag="uk" />
                        <ComboBoxItem Content="English" Tag="en" />
                    </ComboBox>

                    <StackPanel Margin="0,0,0,10">
                        <TextBlock
                            FontFamily="Montserrat"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="DarkGray"
                            Text="{loc:Loc Title}" />
                        <TextBox
                            Margin="0,5,0,0"
                            Background="Transparent"
                            BorderBrush="{StaticResource color11}"
                            BorderThickness="0,0,0,2"
                            CaretBrush="{StaticResource titleColor1}"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="{StaticResource titleColor1}"
                            PreviewTextInput="TextBox_PreviewTextInputLanguageRestricted"
                            Text="{Binding SelectedTranslation.Title, UpdateSourceTrigger=PropertyChanged}"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <TextBlock
                        FontFamily="Montserrat"
                        FontSize="12"
                        FontWeight="Medium"
                        Foreground="DarkGray"
                        Text="{loc:Loc Description}" />
                    <Border
                        Margin="0,20,0,0"
                        BorderBrush="{StaticResource color11}"
                        BorderThickness="2"
                        CornerRadius="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox
                                Padding="10"
                                AcceptsReturn="True"
                                Background="Transparent"
                                BorderThickness="0"
                                CaretBrush="{StaticResource titleColor1}"
                                FontFamily="Montserrat"
                                FontSize="16"
                                FontWeight="Medium"
                                Foreground="White"
                                PreviewTextInput="TextBox_PreviewTextInputLanguageRestricted"
                                Text="{Binding SelectedTranslation.Description, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </ScrollViewer>
                    </Border>

                    <DatePicker
                        Margin="0,20,0,0"
                        Background="Transparent"
                        BorderBrush="{StaticResource color11}"
                        BorderThickness="0,0,0,2"
                        FontFamily="Montserrat"
                        FontSize="16"
                        FontWeight="Medium"
                        Foreground="{StaticResource titleColor1}"
                        SelectedDate="{Binding SelectedEvent.EventDate, UpdateSourceTrigger=PropertyChanged}">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="Foreground" Value="{StaticResource titleColor1}" />
                                <Setter Property="FontFamily" Value="Montserrat" />
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="Padding" Value="4" />
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>


                    <StackPanel
                        Margin="0,20,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">

                        <Button
                            Width="150"
                            Height="45"
                            Margin="10"
                            Command="{Binding SaveCurrentEventCommand}"
                            CommandParameter="{Binding SelectedEvent}"
                            Content="{loc:Loc ButtonSave}"
                            Cursor="Hand"
                            Foreground="White"
                            Style="{StaticResource button}" />

                        <Button
                            Width="150"
                            Height="45"
                            Margin="10"
                            Command="{Binding DeleteEventCommand}"
                            CommandParameter="{Binding SelectedEvent}"
                            Content="{loc:Loc PersonalOfficeButtonDelete}"
                            Cursor="Hand"
                            Foreground="White"
                            Style="{StaticResource button}"
                            Visibility="{Binding CanDeleteSelectedEvent, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>


                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
