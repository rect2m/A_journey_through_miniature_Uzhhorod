<Window
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.AuthWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model"
    xmlns:local="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="550"
    MinWidth="300"
    MinHeight="500"
    MaxWidth="800"
    MaxHeight="550"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Анімація для приховування  -->
        <Storyboard x:Key="HidePanel">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                To="0"
                Duration="0:0:0.5" />
        </Storyboard>

        <!--  Анімація для появи  -->
        <Storyboard x:Key="ShowPanel">
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                To="1"
                Duration="0:0:0.5" />
        </Storyboard>
    </Window.Resources>

    <Border BorderThickness="3" CornerRadius="10">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Offset="0" Color="{StaticResource winBorderColor1}" />
                <GradientStop Offset="0.55" Color="{StaticResource winBorderColor2}" />
                <GradientStop Offset="0.80" Color="{StaticResource winBorderColor3}" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Offset="0.45" Color="{StaticResource primaryBackColor1}" />
                <GradientStop Offset="1" Color="{StaticResource primaryBackColor2}" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Montserrat"
                    FontSize="12"
                    Foreground="{StaticResource titleColor1}"
                    Text="AUTH MENU" />
                <Button
                    x:Name="ButtonMinimize"
                    Grid.Column="1"
                    Margin="-7,0,0,0"
                    Background="{StaticResource buttonMinimize}"
                    BorderThickness="0"
                    Click="ButtonMinimize_Click"
                    Content="-"
                    Cursor="Hand"
                    FontFamily="Montserrat"
                    FontSize="16"
                    Foreground="White"
                    Style="{StaticResource ControlBarButton2}" />
                <Button
                    x:Name="ButtonClose"
                    Grid.Column="2"
                    Background="{StaticResource buttonClose}"
                    BorderThickness="0"
                    Click="ButtonClose_Click"
                    Content="X"
                    Cursor="Hand"
                    FontFamily="Montserrat"
                    FontSize="12"
                    Foreground="White"
                    Style="{StaticResource ControlBarButton2}" />
            </Grid>

            <Canvas>
                <!--  Декоративне світіння  -->
                <Ellipse
                    Canvas.Left="600"
                    Canvas.Top="350"
                    Width="300"
                    Height="300"
                    Opacity="0.25">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Offset="0.2" Color="Goldenrod" />
                            <GradientStop Offset="1" Color="Transparent" />
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <Ellipse
                    Canvas.Left="-100"
                    Canvas.Top="-100"
                    Width="300"
                    Height="300"
                    Opacity="0.25">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Offset="0.2" Color="Goldenrod" />
                            <GradientStop Offset="1" Color="Transparent" />
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <Ellipse
                    Canvas.Left="175"
                    Canvas.Top="450"
                    Width="150"
                    Height="150"
                    Opacity="0.25">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Offset="0.2" Color="Goldenrod" />
                            <GradientStop Offset="1" Color="Transparent" />
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <!--  Діагональна лінія  -->
                <Path
                    Opacity="0.2"
                    Stroke="White"
                    StrokeThickness="1">
                    <Path.Data>
                        <GeometryGroup>
                            <PathGeometry>
                                <PathFigure StartPoint="0,500">
                                    <BezierSegment
                                        Point1="450,0"
                                        Point2="300,200"
                                        Point3="500,150" />
                                    <BezierSegment
                                        Point1="450,120"
                                        Point2="500,380"
                                        Point3="800,20" />
                                </PathFigure>
                            </PathGeometry>
                        </GeometryGroup>
                    </Path.Data>
                </Path>

                <!--  Сітка точок  -->
                <ItemsControl>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Ellipse
                                Width="3"
                                Height="3"
                                Fill="White"
                                Opacity="0.1" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Напівпрозорий трикутник  -->
                <Ellipse
                    Canvas.Left="50"
                    Canvas.Top="50"
                    Width="200"
                    Height="200"
                    Fill="White"
                    Opacity="0.05" />
                <Polygon
                    Fill="White"
                    Opacity="0.07"
                    Points="750,100 900,250 650,350" />
                <Ellipse
                    Canvas.Left="200"
                    Canvas.Top="470"
                    Width="100"
                    Height="100"
                    Fill="White"
                    Opacity="0.07" />
            </Canvas>

            <StackPanel Grid.Row="1">
                <Image
                    x:Name="AuthLogoImage"
                    Width="105"
                    Height="105"
                    Margin="0,15,0,0" />

                <Grid>
                    <StackPanel
                        x:Name="LoginStackPanel"
                        Width="220"
                        Margin="0,20,0,0"
                        Opacity="1"
                        Orientation="Vertical">
                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontFamily="Montserrat"
                            FontSize="20"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{loc:Loc AuthorizationTitle}" />
                        <TextBlock
                            Margin="0,35,0,0"
                            FontFamily="Montserrat"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="DarkGray"
                            Text="{loc:Loc Username}" />
                        <TextBox
                            x:Name="LoginTextBoxUser"
                            Height="28"
                            Margin="0,5,0,0"
                            Padding="25,0,0,0"
                            VerticalContentAlignment="Center"
                            BorderBrush="DarkGray"
                            BorderThickness="0,0,0,2"
                            CaretBrush="LightGray"
                            FontFamily="Montserrat"
                            FontSize="13"
                            FontWeight="Medium"
                            Foreground="White">
                            <TextBox.Background>
                                <ImageBrush
                                    AlignmentX="Left"
                                    ImageSource="/Icons/user.png"
                                    Stretch="None" />
                            </TextBox.Background>
                        </TextBox>
                        <TextBlock
                            Margin="0,15,0,0"
                            FontFamily="Montserrat"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="DarkGray"
                            Text="{loc:Loc Password}" />
                        <PasswordBox
                            x:Name="LoginPasswordBoxPass"
                            Height="28"
                            Margin="0,5,0,0"
                            Padding="25,0,0,0"
                            VerticalContentAlignment="Center"
                            BorderBrush="DarkGray"
                            BorderThickness="0,0,0,2"
                            CaretBrush="LightGray"
                            FontFamily="Montserrat"
                            FontSize="13"
                            FontWeight="Medium"
                            Foreground="White"
                            GotFocus="PasswordBoxPass_GotFocus"
                            LostFocus="PasswordBoxPass_LostFocus">
                            <PasswordBox.Background>
                                <ImageBrush
                                    AlignmentX="Left"
                                    ImageSource="/Icons/key.png"
                                    Stretch="None" />
                            </PasswordBox.Background>
                        </PasswordBox>
                        <Button
                            x:Name="ButtonLogin"
                            Margin="0,40,0,0"
                            BorderThickness="0"
                            Click="ButtonLogin_Click"
                            Content="{loc:Loc LoginButton}"
                            Cursor="Hand"
                            FontFamily="Montserrat"
                            FontSize="12"
                            Foreground="White"
                            IsDefault="True"
                            Style="{StaticResource button}" />
                        <StackPanel
                            Margin="0,20,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontFamily="Montserrat"
                                FontSize="12"
                                FontWeight="Medium"
                                Foreground="DarkGray"
                                Text="{loc:Loc DontHaveAcount}" />
                            <TextBlock
                                x:Name="TextBlockRegistration"
                                Margin="8,0,0,0"
                                Cursor="Hand"
                                FontFamily="Montserrat"
                                FontSize="12"
                                FontWeight="Medium"
                                MouseLeftButtonDown="TextBlockRegistration_MouseLeftButtonDown"
                                Style="{StaticResource link}"
                                Text="{loc:Loc Registration}" />
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        x:Name="RegStackPanel"
                        Grid.Row="2"
                        Width="220"
                        Margin="0,5,0,0"
                        Opacity="0"
                        Orientation="Vertical"
                        Visibility="Collapsed">
                        <TextBlock
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"
                            FontFamily="Montserrat"
                            FontSize="20"
                            FontWeight="Medium"
                            Foreground="White"
                            Text="{loc:Loc Registration}" />
                        <TextBlock
                            Margin="0,25,0,0"
                            FontFamily="Montserrat"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="DarkGray"
                            Text="{loc:Loc Username}" />
                        <TextBox
                            x:Name="RegTextBoxUser"
                            Height="28"
                            Margin="0,5,0,0"
                            Padding="25,0,0,0"
                            VerticalContentAlignment="Center"
                            BorderBrush="DarkGray"
                            BorderThickness="0,0,0,2"
                            CaretBrush="LightGray"
                            FontFamily="Montserrat"
                            FontSize="13"
                            FontWeight="Medium"
                            Foreground="White"
                            MaxLength="20"
                            ToolTip="{loc:Loc UsernameToolTip}">
                            <TextBox.Background>
                                <ImageBrush
                                    AlignmentX="Left"
                                    ImageSource="/Icons/user.png"
                                    Stretch="None" />
                            </TextBox.Background>
                        </TextBox>
                        <TextBlock
                            Margin="0,15,0,0"
                            FontFamily="Montserrat"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="DarkGray"
                            Text="{loc:Loc Password}" />
                        <PasswordBox
                            x:Name="RegPasswordBoxPass"
                            Height="28"
                            Margin="0,5,0,0"
                            Padding="25,0,0,0"
                            VerticalContentAlignment="Center"
                            BorderBrush="DarkGray"
                            BorderThickness="0,0,0,2"
                            CaretBrush="LightGray"
                            FontFamily="Montserrat"
                            FontSize="13"
                            FontWeight="Medium"
                            Foreground="White"
                            GotFocus="PasswordBoxPass_GotFocus"
                            LostFocus="PasswordBoxPass_LostFocus"
                            ToolTip="{loc:Loc PasswordToolTip}">
                            <PasswordBox.Background>
                                <ImageBrush
                                    AlignmentX="Left"
                                    ImageSource="/Icons/key.png"
                                    Stretch="None" />
                            </PasswordBox.Background>
                        </PasswordBox>

                        <TextBlock
                            Margin="0,15,0,0"
                            FontFamily="Montserrat"
                            FontSize="12"
                            FontWeight="Medium"
                            Foreground="DarkGray"
                            Text="{loc:Loc Email}" />
                        <TextBox
                            x:Name="RegTextBoxMail"
                            Height="28"
                            Margin="0,5,0,0"
                            Padding="25,0,0,0"
                            VerticalContentAlignment="Center"
                            BorderBrush="DarkGray"
                            BorderThickness="0,0,0,2"
                            CaretBrush="LightGray"
                            FontFamily="Montserrat"
                            FontSize="13"
                            FontWeight="Medium"
                            Foreground="White"
                            ToolTip="{loc:Loc EmailToolTip}">
                            <TextBox.Background>
                                <ImageBrush
                                    AlignmentX="Left"
                                    ImageSource="/Icons/mail-icon.png"
                                    Stretch="None" />
                            </TextBox.Background>
                        </TextBox>

                        <Button
                            x:Name="ButtonRegistration"
                            Margin="0,20,0,0"
                            BorderThickness="0"
                            Click="ButtonRegistration_Click"
                            Content="{loc:Loc ButtonRegistry}"
                            Cursor="Hand"
                            FontFamily="Montserrat"
                            FontSize="12"
                            Foreground="White"
                            IsDefault="True"
                            Style="{StaticResource button}" />
                        <StackPanel
                            Margin="0,15,0,0"
                            HorizontalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                FontFamily="Montserrat"
                                FontSize="12"
                                FontWeight="Medium"
                                Foreground="DarkGray"
                                Text="{loc:Loc AlreadyHaveAnAccount}" />
                            <TextBlock
                                x:Name="TextBlockLogin"
                                Margin="8,0,0,0"
                                Cursor="Hand"
                                FontFamily="Montserrat"
                                FontSize="12"
                                FontWeight="Medium"
                                MouseLeftButtonDown="TextBlockLogin_MouseLeftButtonDown"
                                Style="{StaticResource link}"
                                Text="{loc:Loc AuthorizationTitle}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel
                Grid.Row="3"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    x:Name="TextBlockBack"
                    Cursor="Hand"
                    FontFamily="Montserrat"
                    FontSize="12"
                    FontWeight="Medium"
                    MouseLeftButtonDown="TextBlockBack_MouseLeftButtonDown"
                    Style="{StaticResource link}"
                    Text="{loc:Loc MainMenu}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
