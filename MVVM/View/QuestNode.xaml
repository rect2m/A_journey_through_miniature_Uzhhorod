<UserControl
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.QuestNode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="120"
    d:DesignWidth="120"
    mc:Ignorable="d">

    <Grid Width="100" Height="100">
        <Grid.ToolTip>
            <ToolTip Content="{Binding Description}"  />
        </Grid.ToolTip>

        <!--  Background Circle  -->
        <Ellipse
            Fill="{StaticResource panelOverColor}"
            Stroke="{Binding BackgroundStroke}"
            StrokeThickness="5" />

        <!--  Progress Arc  -->
        <Path
            Data="{Binding ProgressArc}"
            Fill="Transparent"
            RenderTransformOrigin="0.5,0.5"
            Stroke="{Binding ProgressStroke}"
            StrokeThickness="5" />

        <!--  Inner Content  -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <fa:IconImage
                Width="40"
                Height="40"
                HorizontalAlignment="Center"
                Foreground="{StaticResource titleColor1}"
                Icon="{Binding Icon}" />
            <TextBlock
                Margin="5,2,5,0"
                FontSize="10"
                FontWeight="Bold"
                Foreground="{StaticResource titleColor1}"
                Text="{Binding Title}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <TextBlock
                FontSize="10"
                Foreground="{StaticResource titleColor1}"
                Text="{Binding ProgressText}"
                TextAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
