<UserControl
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.HelpPageControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Border
            Margin="5"
            Padding="20"
            Background="{StaticResource panelOverColor}"
            BorderBrush="{StaticResource color11}"
            BorderThickness="2"
            CornerRadius="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock
                    Margin="0,0,0,20"
                    HorizontalAlignment="Left"
                    FontSize="18"
                    Foreground="{StaticResource titleColor1}"
                    Text="{Binding HelpText}"
                    TextWrapping="Wrap" />
            </ScrollViewer>
        </Border>

    </Grid>
</UserControl>
