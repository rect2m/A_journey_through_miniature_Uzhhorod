<UserControl
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.MapPageControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:loc="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model"
    xmlns:local="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Search Panel  -->
        <Grid
            x:Name="SearchPanel"
            Grid.Row="0"
            Margin="10"
            Panel.ZIndex="150">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="1"
                Width="250"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <fa:IconImage
                    Grid.Column="0"
                    Width="20"
                    Height="20"
                    Margin="10,0,10,0"
                    Foreground="{StaticResource titleColor2}"
                    Icon="Search" />
                <TextBox
                    x:Name="TextBoxSearch"
                    Width="250"
                    Height="35"
                    Padding="5"
                    Background="Transparent"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,2"
                    CaretBrush="LightGray"
                    FontFamily="Montserrat"
                    FontSize="13"
                    FontWeight="Medium"
                    Foreground="White"
                    TextChanged="TextBoxSearch_TextChanged"
                    ToolTip="{loc:Loc TextBoxSearchToolTip}" />
            </StackPanel>
        </Grid>

        <!--  Routing Panel  -->
        <StackPanel
            Grid.Row="1"
            Margin="10"
            HorizontalAlignment="Left"
            Panel.ZIndex="150"
            Orientation="Horizontal">
            <TextBlock
                Grid.Row="1"
                Margin="0,10,0,0"
                FontFamily="Montserrat"
                FontSize="16"
                FontWeight="Medium"
                Foreground="{StaticResource titleColor1}"
                Text="{loc:Loc From where}" />
            <ComboBox
                x:Name="ComboBoxFrom"
                Width="200"
                Margin="10,0,10,0"
                Style="{StaticResource ComboBoxStyle}" />
            <TextBlock
                Grid.Row="1"
                Margin="0,10,0,0"
                FontFamily="Montserrat"
                FontSize="16"
                FontWeight="Medium"
                Foreground="{StaticResource titleColor1}"
                Text="{loc:Loc ToWhere}" />
            <ComboBox
                x:Name="ComboBoxTo"
                Width="200"
                Margin="10,0,10,0"
                Style="{StaticResource ComboBoxStyle}" />
            <Button
                Click="ButtonBuildRoute_Click"
                Content="{loc:Loc ButtonRoute}"
                Style="{StaticResource button}" />
            <Button
                Margin="10,0,0,0"
                Click="ButtonClearRoute_Click"
                Content="{loc:Loc ButtonClearRoute}"
                Style="{StaticResource button}" />
        </StackPanel>

        <!--  Map  -->
        <wpf:WebView2
            x:Name="WebMap"
            Grid.Row="2"
            Margin="0,10,0,0"
            Panel.ZIndex="0" />
    </Grid>
</UserControl>
