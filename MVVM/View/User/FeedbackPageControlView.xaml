<UserControl
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.FeedbackPageControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model"
    xmlns:local="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="550"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        Margin="20"
        Padding="10"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="{StaticResource panelOverColor}"
        BorderBrush="{StaticResource color11}"
        BorderThickness="2"
        CornerRadius="10">

        <Viewbox
            MaxWidth="900"
            MaxHeight="700"
            Stretch="Uniform">
            <Grid Width="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="200" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="{StaticResource titleColor1}"
                    Text="{loc:Loc RadioButtonFeedback}" />

                <TextBlock
                    Grid.Row="1"
                    Margin="30,10,0,0"
                    FontFamily="Montserrat"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="{StaticResource titleColor1}"
                    Text="{loc:Loc TextBlockKategoryFeedBack}" />

                <ComboBox
                    Grid.Row="2"
                    Margin="30,10,30,10"
                    ItemsSource="{Binding Categories}"
                    SelectedItem="{Binding Category}"
                    Style="{StaticResource ComboBoxStyle}" />


                <TextBlock
                    Grid.Row="3"
                    Margin="30,10,0,0"
                    FontFamily="Montserrat"
                    FontSize="16"
                    FontWeight="Medium"
                    Foreground="{StaticResource titleColor1}"
                    Text="{loc:Loc TextBlockMessageFeedBack}" />

                <Border
                    Grid.Row="4"
                    Margin="30,0,30,0"
                    Background="Transparent"
                    BorderBrush="{StaticResource color11}"
                    BorderThickness="2"
                    CornerRadius="10">
                    <TextBox
                        Padding="10"
                        AcceptsReturn="True"
                        Background="Transparent"
                        BorderThickness="0"
                        CaretBrush="{StaticResource titleColor1}"
                        FontFamily="Montserrat"
                        FontSize="13"
                        FontWeight="Medium"
                        Foreground="White"
                        Text="{Binding Message}"
                        TextWrapping="Wrap"
                        ToolTip="{loc:Loc TextBoxMessageFeedBackToolTip}" />
                </Border>

                <Button
                    Grid.Row="5"
                    Margin="0,10,0,0"
                    Command="{Binding SendFeedbackCommand}"
                    Content="{loc:Loc ButtonSendFeedBack}"
                    Style="{StaticResource button}" />
            </Grid>
        </Viewbox>
    </Border>
</UserControl>
