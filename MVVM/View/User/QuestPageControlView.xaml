<UserControl
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.QuestPageControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:loc="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">

    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Панель керування  -->
        <Grid Grid.Row="0">
            <Border
                Margin="5"
                Background="{StaticResource panelOverColor}"
                BorderBrush="{StaticResource color11}"
                BorderThickness="2"
                CornerRadius="10">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Маштаб  -->
                    <StackPanel
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Padding="5"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{StaticResource titleColor1}"
                            Opacity="0.8"
                            Text="{loc:Loc TextBlockQuestScale}" />
                        <TextBlock
                            x:Name="ZoomIndicator"
                            Padding="5"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{StaticResource titleColor1}"
                            Opacity="0.8"
                            Text="100%" />
                    </StackPanel>

                    <!--  Центрування  -->
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="5"
                            Padding="5"
                            FontSize="14"
                            FontWeight="Bold"
                            Foreground="{StaticResource titleColor1}"
                            Opacity="0.8"
                            Text="{loc:Loc TextBlockQuestCenter}" />
                        <Button
                            Margin="5"
                            Click="CenterTree_Click"
                            Style="{StaticResource IconButton}"
                            Tag="{StaticResource color11}"
                            ToolTip="{loc:Loc TextBlockQuestCenter}">

                            <fa:IconImage Icon="ArrowsToDot" Style="{StaticResource iconButtonIcon}" />
                        </Button>
                    </StackPanel>

                    <!--  Статуси  -->
                    <StackPanel
                        Grid.Column="2"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <Ellipse
                            Width="16"
                            Height="16"
                            Margin="5,0"
                            Fill="Green" />
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{StaticResource titleColor1}"
                            Text="{loc:Loc TextBlockQuestDone}" />

                        <Ellipse
                            Width="16"
                            Height="16"
                            Margin="5,0"
                            Fill="White" />
                        <TextBlock
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{StaticResource titleColor1}"
                            Text="{loc:Loc TextBlockQuestInProcess}" />

                        <Ellipse
                            Width="16"
                            Height="16"
                            Margin="5,0"
                            Fill="DarkGray" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="12"
                            Foreground="{StaticResource titleColor1}"
                            Text="{loc:Loc TextBlockQuestBlocked}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!--  Дерево квестів  -->
        <Grid
            Grid.Row="1"
            Panel.ZIndex="0"
            PreviewMouseWheel="Grid_MouseWheel">
            <Border
                Margin="5"
                Background="{StaticResource panelOverColor}"
                BorderBrush="{StaticResource color11}"
                BorderThickness="2"
                CornerRadius="10" />

            <Border
                Margin="5"
                Background="Transparent"
                CornerRadius="10">
                <ScrollViewer
                    x:Name="ScrollViewer"
                    Background="Transparent"
                    HorizontalScrollBarVisibility="Hidden"
                    VerticalScrollBarVisibility="Hidden">
                    <Canvas
                        x:Name="CanvasWrapper"
                        Background="Transparent"
                        MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                        MouseMove="Canvas_MouseMove">

                        <Canvas
                            x:Name="QuestCanvas"
                            Background="Transparent"
                            RenderTransformOrigin="0.5,0.5">
                            <Canvas.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="CanvasScaleTransform" ScaleX="1" ScaleY="1" />
                                    <TranslateTransform x:Name="CanvasTranslateTransform" X="0" Y="0" />
                                </TransformGroup>
                            </Canvas.RenderTransform>
                        </Canvas>
                    </Canvas>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
