<UserControl
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.EventsPageControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:loc="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model"
    xmlns:local="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Поле для пошуку  -->
        <Grid x:Name="Search">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!--  Для іконки  -->
                <ColumnDefinition Width="Auto" />
                <!--  Для поля введення  -->
                <ColumnDefinition Width="*" />
                <!--  Для розширення простору  -->
                <ColumnDefinition Width="Auto" />
                <!--  Для кнопки  -->
            </Grid.ColumnDefinitions>

            <fa:IconImage
                Grid.Column="0"
                Width="20"
                Height="20"
                Margin="40,0,10,0"
                Foreground="{StaticResource titleColor2}"
                Icon="Search" />

            <TextBox
                x:Name="TextBoxSearch"
                Grid.Column="1"
                Width="200"
                Height="28"
                Margin="0,5,0,0"
                HorizontalAlignment="Left"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderBrush="DarkGray"
                BorderThickness="0,0,0,2"
                CaretBrush="LightGray"
                FontFamily="Montserrat"
                FontSize="13"
                FontWeight="Medium"
                Foreground="White"
                Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="{loc:Loc EventTextBoxSearchToolTip}" />

            <ToggleButton
                Grid.Column="3"
                Width="180"
                Height="40"
                Margin="5,5,46,5"
                HorizontalAlignment="Right"
                Command="{Binding ToggleSortingCommand}"
                Content="{Binding SortIcon}"
                Style="{StaticResource FilerButton}" />
        </Grid>

        <ScrollViewer
            Grid.Row="1"
            Margin="0,5,0,0"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl Margin="20" ItemsSource="{Binding Events}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Border
                                Grid.Column="0"
                                Width="4"
                                Background="{StaticResource color11}" />

                            <Ellipse
                                Grid.Column="0"
                                Width="22"
                                Height="22"
                                Margin="0,0,0,15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Fill="{StaticResource color11}"
                                Stroke="White"
                                StrokeThickness="3">
                                <Ellipse.Effect>
                                    <DropShadowEffect
                                        BlurRadius="10"
                                        Opacity="0.3"
                                        Color="Black" />
                                </Ellipse.Effect>
                            </Ellipse>

                            <Border
                                Grid.Column="1"
                                Margin="10,5,10,20"
                                Padding="15"
                                Background="{StaticResource panelOverColor}"
                                BorderBrush="{StaticResource color11}"
                                BorderThickness="1"
                                CornerRadius="12">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Foreground="{StaticResource titleColor1}"
                                        Text="{Binding Title}"
                                        TextWrapping="Wrap" />
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            FontSize="14"
                                            Foreground="{StaticResource titleColor1}"
                                            Text="{loc:Loc EventDate}" />
                                        <TextBlock
                                            FontSize="14"
                                            Foreground="{StaticResource titleColor1}"
                                            Text="{Binding EventDate}" />
                                    </StackPanel>
                                    <TextBlock
                                        FontSize="14"
                                        Foreground="{StaticResource titleColor1}"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,-10"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Margin="10"
                Command="{Binding PrevPageCommand}"
                Style="{StaticResource IconButton}"
                Tag="{StaticResource color11}"
                ToolTip="{loc:Loc PrewPageToolTip}">
                <fa:IconImage Icon="AngleLeft" Style="{StaticResource iconButtonIcon}" />
            </Button>
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                Foreground="{StaticResource titleColor1}"
                Text="{Binding CurrentPage}" />
            <TextBlock
                VerticalAlignment="Center"
                Foreground="{StaticResource titleColor1}"
                Text=" / " />
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                Foreground="{StaticResource titleColor1}"
                Text="{Binding TotalPages}" />
            <Button
                Margin="10"
                Command="{Binding NextPageCommand}"
                Style="{StaticResource IconButton}"
                Tag="{StaticResource color11}"
                ToolTip="{loc:Loc NextPageToolTip}">
                <fa:IconImage Icon="AngleRight" Style="{StaticResource iconButtonIcon}" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
