<UserControl
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.MiniatureDetailsPageControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:loc="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="550"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="70" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Кнопка назад  -->
        <Button
            x:Name="ButtonBack"
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Left"
            Command="{Binding BackToListCommand}"
            Style="{StaticResource IconButton}"
            Tag="{StaticResource color11}"
            ToolTip="{loc:Loc ButtonBackToolTip}">
            <fa:IconImage Icon="AngleLeft" Style="{StaticResource iconButtonIcon}" />
        </Button>

        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,20,10,0"
            FontSize="24"
            FontWeight="Bold"
            Foreground="{StaticResource titleColor1}"
            Text="{Binding SelectedMiniature.Name}"
            TextAlignment="Center" />

        <Button
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,10,50,10"
            HorizontalAlignment="Right"
            Command="{Binding ToggleFavoriteCommand}"
            Style="{StaticResource FavoriteDetailsButtonStyle}"
            Tag="{StaticResource color4}"
            ToolTip="{loc:Loc ButtonAddFavoriteToolTip}">
            <fa:IconImage Icon="Heart" Style="{StaticResource iconButtonIcon}" />
        </Button>

        <!--  Основний блок з інформацією  -->
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Padding="15"
            BorderThickness="1"
            CornerRadius="10">
            <Grid>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!--  Опис  -->
                        <TextBlock
                            Margin="0,0,0,20"
                            FontSize="18"
                            Foreground="{StaticResource titleColor1}"
                            Text="{Binding SelectedMiniature.Description}"
                            TextWrapping="Wrap" />

                        <!--  Відгук  -->
                        <TextBlock
                            Margin="0,30,0,5"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{StaticResource titleColor1}"
                            Text="{loc:Loc MiniatureTextBlockAddReview}" />

                        <Border
                            Background="Transparent"
                            BorderBrush="{StaticResource color11}"
                            BorderThickness="1"
                            CornerRadius="10">
                            <TextBox
                                Height="70"
                                Padding="5"
                                AcceptsReturn="True"
                                Background="Transparent"
                                BorderThickness="0"
                                CaretBrush="{StaticResource titleColor1}"
                                FontSize="14"
                                Foreground="{StaticResource titleColor1}"
                                Text="{Binding ReviewComment, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </Border>

                        <Button
                            Margin="10"
                            BorderThickness="0"
                            Command="{Binding SubmitReviewCommand}"
                            Content="{loc:Loc MiniatureButtonAddReview}"
                            Cursor="Hand"
                            FontFamily="Montserrat"
                            FontSize="12"
                            Foreground="White"
                            Style="{StaticResource button}" />

                        <TextBlock
                            Margin="0,30,0,5"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="{StaticResource titleColor1}"
                            Text="{loc:Loc MiniatureTextBlockReview}" />

                        <TextBlock
                            Margin="0,30,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="14"
                            Foreground="{StaticResource titleColor1}"
                            Text="{loc:Loc AnavaibleReviews}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Reviews.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ItemsControl ItemsSource="{Binding Reviews}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="5"
                                        Padding="10"
                                        BorderBrush="{StaticResource color11}"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <!--  Користувач  -->
                                                <StackPanel Orientation="Horizontal">
                                                    <Ellipse Width="24" Height="24">
                                                        <Ellipse.Fill>
                                                            <ImageBrush ImageSource="{Binding AvatarImage}" Stretch="UniformToFill" />
                                                        </Ellipse.Fill>
                                                    </Ellipse>

                                                    <TextBlock
                                                        Margin="5,0,0,0"
                                                        FontSize="16"
                                                        FontWeight="Bold"
                                                        Foreground="{StaticResource titleColor1}"
                                                        Text="{Binding UserName}" />
                                                </StackPanel>

                                                <!--  Дата  -->
                                                <TextBlock
                                                    Margin="10,3,0,0"
                                                    FontSize="13"
                                                    Foreground="{StaticResource titleColor1}"
                                                    Text="{Binding CreatedAt}" />
                                            </StackPanel>

                                            <!--  Оцінка  -->
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock
                                                    FontSize="14"
                                                    Foreground="{StaticResource titleColor1}"
                                                    Text="{loc:Loc TextBlockReviewRate}" />
                                                <TextBlock
                                                    FontSize="14"
                                                    Foreground="{StaticResource color6}"
                                                    Text="{Binding Rating}" />
                                                <fa:IconImage
                                                    Width="18"
                                                    Height="18"
                                                    Margin="3,0,0,0"
                                                    Foreground="{StaticResource color6}"
                                                    Icon="Star"
                                                    Style="{StaticResource iconButtonIcon}" />
                                            </StackPanel>

                                            <!--  Коментар  -->
                                            <TextBlock
                                                FontSize="15"
                                                Foreground="{StaticResource titleColor1}"
                                                Text="{Binding Comment}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

        </Border>

        <!--  Ліва частина: Зображення + GPS  -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Зображення  -->
            <Border
                Grid.Row="0"
                BorderBrush="{StaticResource color11}"
                BorderThickness="3"
                CornerRadius="20">
                <Border.Background>
                    <ImageBrush ImageSource="{Binding SelectedMiniature.ImageSource}" Stretch="UniformToFill" />
                </Border.Background>
            </Border>

            <!--  Координати + 3D модель  -->
            <StackPanel
                Grid.Row="1"
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <Button
                    x:Name="Button3DModel"
                    Margin="0,5,0,0"
                    Command="{Binding View3DModelCommand}"
                    Content="{loc:Loc Button3DModel}"
                    Cursor="Hand"
                    FontFamily="Montserrat"
                    FontSize="15"
                    Foreground="White"
                    Style="{StaticResource button3DModel}" />

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FlowDirection="LeftToRight"
                    Orientation="Horizontal">
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{StaticResource titleColor1}"
                        Text="{loc:Loc MiniatureTextBlockRating}"
                        TextAlignment="Center" />
                    <TextBlock
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="{StaticResource titleColor1}"
                        Text="{Binding SelectedMiniature.AverageRating}"
                        TextAlignment="Center" />
                    <fa:IconImage
                        Margin="10,0,0,0"
                        Foreground="{StaticResource color6}"
                        Icon="Star"
                        Style="{StaticResource iconButtonIcon}" />
                </StackPanel>

                <StackPanel
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="0,5,10,0"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource titleColor1}"
                        Text="GPS:" />

                    <StackPanel Orientation="Vertical">
                        <StackPanel
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource titleColor1}"
                                Text="{loc:Loc TextBlockLatitude}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource titleColor1}"
                                Text="{Binding SelectedMiniature.Latitude}" />
                        </StackPanel>


                        <StackPanel
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource titleColor1}"
                                Text="{loc:Loc TextBlockLongitude}" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="{StaticResource titleColor1}"
                                Text="{Binding SelectedMiniature.Longitude}" />
                        </StackPanel>

                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                <!--  Оцінка  -->
                <TextBlock
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="25"
                    FontWeight="Bold"
                    Foreground="{StaticResource titleColor1}"
                    Text="{loc:Loc MiniatureTextBlockRate}" />

                <!--  ⭐ Зірочки  -->
                <StackPanel
                    Name="StarPanel"
                    Margin="40,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FlowDirection="LeftToRight"
                    Orientation="Horizontal">
                    <Button
                        Margin="10"
                        Command="{Binding RateCommand}"
                        CommandParameter="1"
                        MouseEnter="StarButton_MouseEnter"
                        MouseLeave="StarButton_MouseLeave"
                        Style="{StaticResource StarButton}"
                        Tag="1">
                        <fa:IconImage Icon="Star" Style="{StaticResource StarButtonIcon}" />
                    </Button>
                    <Button
                        Margin="10"
                        Command="{Binding RateCommand}"
                        CommandParameter="2"
                        MouseEnter="StarButton_MouseEnter"
                        MouseLeave="StarButton_MouseLeave"
                        Style="{StaticResource StarButton}"
                        Tag="2">
                        <fa:IconImage Icon="Star" Style="{StaticResource StarButtonIcon}" />
                    </Button>
                    <Button
                        Margin="10"
                        Command="{Binding RateCommand}"
                        CommandParameter="3"
                        MouseEnter="StarButton_MouseEnter"
                        MouseLeave="StarButton_MouseLeave"
                        Style="{StaticResource StarButton}"
                        Tag="3">
                        <fa:IconImage Icon="Star" Style="{StaticResource StarButtonIcon}" />
                    </Button>
                    <Button
                        Margin="10"
                        Command="{Binding RateCommand}"
                        CommandParameter="4"
                        MouseEnter="StarButton_MouseEnter"
                        MouseLeave="StarButton_MouseLeave"
                        Style="{StaticResource StarButton}"
                        Tag="4">
                        <fa:IconImage Icon="Star" Style="{StaticResource StarButtonIcon}" />
                    </Button>
                    <Button
                        Margin="10"
                        Command="{Binding RateCommand}"
                        CommandParameter="5"
                        MouseEnter="StarButton_MouseEnter"
                        MouseLeave="StarButton_MouseLeave"
                        Style="{StaticResource StarButton}"
                        Tag="5">
                        <fa:IconImage Icon="Star" Style="{StaticResource StarButtonIcon}" />
                    </Button>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
