<Window
    x:Class="A_journey_through_miniature_Uzhhorod.MVVM.View.WelcomeWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loc="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.Model"
    xmlns:local="clr-namespace:A_journey_through_miniature_Uzhhorod.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Mini_sculptures_of_Uzhgorod "
    Width="800"
    Height="550"
    AllowsTransparency="True"
    Background="Transparent"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border BorderThickness="3" CornerRadius="10">

        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Offset="0" Color="{StaticResource winBorderColor1}" />
                <GradientStop Offset="0.55" Color="{StaticResource winBorderColor2}" />
                <GradientStop Offset="0.80" Color="{StaticResource winBorderColor3}" />
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Offset="0.45" Color="{StaticResource primaryBackColor1}" />
                <GradientStop Offset="1" Color="{StaticResource primaryBackColor2}" />
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="5" />
                </Grid.ColumnDefinitions>

                <Canvas>
                    <!--  Декоративне світіння  -->
                    <Ellipse
                        Canvas.Left="600"
                        Canvas.Top="350"
                        Width="300"
                        Height="300"
                        Opacity="0.25">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Offset="0.2" Color="Goldenrod" />
                                <GradientStop Offset="1" Color="Transparent" />
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <Ellipse
                        Canvas.Left="-100"
                        Canvas.Top="-100"
                        Width="300"
                        Height="300"
                        Opacity="0.25">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Offset="0.2" Color="Goldenrod" />
                                <GradientStop Offset="1" Color="Transparent" />
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <Ellipse
                        Canvas.Left="175"
                        Canvas.Top="450"
                        Width="150"
                        Height="150"
                        Opacity="0.25">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Offset="0.2" Color="Goldenrod" />
                                <GradientStop Offset="1" Color="Transparent" />
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>

                    <!--  Діагональна лінія  -->
                    <Path
                        Opacity="0.2"
                        Stroke="White"
                        StrokeThickness="1">
                        <Path.Data>
                            <GeometryGroup>
                                <PathGeometry>
                                    <PathFigure StartPoint="0,500">
                                        <BezierSegment
                                            Point1="450,0"
                                            Point2="300,200"
                                            Point3="500,150" />
                                        <BezierSegment
                                            Point1="450,120"
                                            Point2="500,380"
                                            Point3="800,20" />
                                    </PathFigure>
                                </PathGeometry>
                            </GeometryGroup>
                        </Path.Data>
                    </Path>

                    <!--  Сітка точок  -->
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Ellipse
                                    Width="3"
                                    Height="3"
                                    Fill="White"
                                    Opacity="0.1" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!--  Напівпрозорий трикутник  -->
                    <Ellipse
                        Canvas.Left="50"
                        Canvas.Top="50"
                        Width="200"
                        Height="200"
                        Fill="White"
                        Opacity="0.05" />
                    <Polygon
                        Fill="White"
                        Opacity="0.07"
                        Points="750,100 900,250 650,350" />
                    <Ellipse
                        Canvas.Left="200"
                        Canvas.Top="470"
                        Width="100"
                        Height="100"
                        Fill="White"
                        Opacity="0.07" />
                </Canvas>

                <TextBlock
                    Grid.Column="0"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontFamily="Montserrat"
                    FontSize="12"
                    Foreground="{StaticResource titleColor1}"
                    Text="WELCOME" />
                <Button
                    x:Name="ButtonMinimize"
                    Grid.Column="1"
                    Margin="-7,0,0,0"
                    Background="{StaticResource buttonMinimize}"
                    BorderThickness="0"
                    Click="ButtonMinimize_Click"
                    Content="-"
                    Cursor="Hand"
                    FontFamily="Montserrat"
                    FontSize="16"
                    Foreground="White"
                    Style="{StaticResource ControlBarButton2}" />
                <Button
                    x:Name="ButtonClose"
                    Grid.Column="2"
                    Background="{StaticResource buttonClose}"
                    BorderThickness="0"
                    Click="ButtonClose_Click"
                    Content="X"
                    Cursor="Hand"
                    FontFamily="Montserrat"
                    FontSize="12"
                    Foreground="White"
                    Style="{StaticResource ControlBarButton2}" />
            </Grid>

            <StackPanel
                Grid.Row="2"
                Width="Auto"
                Margin="0,55,0,0"
                Orientation="Vertical">
                <Image
                    Width="400"
                    Height="200"
                    Margin="0,10,0,0"
                    Source="/Icons/Logo.jpg" />
                <Separator Height="2" Background="White" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontFamily="Arial Black"
                    FontSize="32"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="{loc:Loc WelcomeTitle}" />
                <Button
                    x:Name="ButtonToProgram"
                    Margin="0,40,0,0"
                    BorderThickness="0"
                    Click="ButtonToProgram_Click"
                    Content="{loc:Loc ButtonToProgram}"
                    Cursor="Hand"
                    FontFamily="Montserrat"
                    FontSize="12"
                    Foreground="White"
                    Style="{StaticResource button}" />
                <Button
                    x:Name="ButtonExit"
                    Margin="0,20,0,0"
                    BorderThickness="0"
                    Click="ButtonExit_Click"
                    Content="{loc:Loc ButtonExit}"
                    Cursor="Hand"
                    FontFamily="Montserrat"
                    FontSize="12"
                    Foreground="White"
                    Style="{StaticResource button}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
